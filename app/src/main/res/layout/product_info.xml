<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="456dp"
        android:layout_height="487dp"
        android:layout_marginBottom="300dp"
        app:srcCompat="@drawable/title_gradient" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:rotation="180"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="35dp"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24_white" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:text="Thông tin sản phẩm"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/halfrounded_background"
        android:layout_marginTop="170dp"
        android:paddingTop="80dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm: Tinh dầu anh đào"
            android:textSize="23sp"
            android:id="@+id/tv1"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kho: Bình Dương"
            android:textSize="23sp"
            android:id="@+id/tv2"
            android:layout_below="@id/tv1"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vị trí: Lầu 1 kệ F"
            android:textSize="23sp"
            android:id="@+id/tv3"
            android:layout_below="@id/tv2"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lô: 9292_232_F"
            android:textSize="23sp"
            android:id="@+id/tv41"
            android:layout_below="@id/tv3"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: 100"
            android:textSize="23sp"
            android:id="@+id/tv51"
            android:layout_below="@id/tv41"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hạn sử dụng: 01/04/2021"
            android:textSize="23sp"
            android:id="@+id/tv61"
            android:layout_below="@id/tv51"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/edit_product"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv61"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/purple_stroke"
            android:fontFamily="sans-serif"
            android:text="Chỉnh sửa"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:layout_below="@id/tv61"
            android:background="@drawable/purple_stroke"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="190dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Chuyển kho"
            android:fontFamily="sans-serif"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

    </RelativeLayout>
    <ImageView
        android:id="@+id/imageView15"
        android:layout_centerHorizontal="true"
        android:layout_width="174dp"
        android:layout_height="122dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/newproduct"
        />
</RelativeLayout>