<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="456dp"
        android:layout_height="487dp"
        android:layout_marginBottom="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/title_gradient" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:rotation="180"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24_white" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:text="Thông tin sản phẩm"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="125dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView6"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/product" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/halfrounded_background"
        android:layout_marginTop="170dp"
        android:paddingTop="80dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm: Tinh dầu anh đào"
            android:textSize="23sp"
            android:id="@+id/tv1"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kho: Bình Dương"
            android:textSize="23sp"
            android:id="@+id/tv2"
            android:layout_below="@id/tv1"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vị trí: Lầu 1 kệ F"
            android:textSize="23sp"
            android:id="@+id/tv3"
            android:layout_below="@id/tv2"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lô: 9292_232_F"
            android:textSize="23sp"
            android:id="@+id/tv41"
            android:layout_below="@id/tv3"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: 100"
            android:textSize="23sp"
            android:id="@+id/tv51"
            android:layout_below="@id/tv41"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hạn sử dụng: 01/04/2021"
            android:textSize="23sp"
            android:id="@+id/tv61"
            android:layout_below="@id/tv51"
            android:layout_marginBottom="20dp"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv61"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="71dp"
            android:background="@drawable/purple_stroke"
            android:fontFamily="sans-serif"
            android:text="Chỉnh sửa"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:layout_below="@id/tv61"
            android:background="@drawable/purple_stroke"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="190dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Chuyển kho"
            android:fontFamily="sans-serif"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>