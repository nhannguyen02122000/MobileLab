<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="456dp"
        android:layout_height="487dp"
        android:layout_marginBottom="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/title_gradient" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:rotation="180"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24_white" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:text="Chuyển kho"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="200dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView6"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:id="@+id/tv11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyển 3 sản phẩm"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/iv11"
                android:layout_below="@id/tv11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/moving_flight"/>
            <TextView
                android:id="@+id/tv12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã xử lý 0 sản phẩm"
                android:layout_below="@id/iv11"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/halfrounded_background"
        android:layout_marginTop="300dp">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
            android:rotation="90"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/iv1"
            android:fontFamily="sans-serif"
            android:text="Xác nhận"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian chuyển hàng dự kiến"
            android:layout_below="@id/tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/tvamout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="70sp"
            android:textStyle="bold"
            android:layout_below="@id/tv2"
            android:text="19"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ngày"
            android:id="@+id/tv3"
            android:layout_toRightOf="@id/tvamout"
            android:layout_below="@id/tv2"
            android:layout_centerHorizontal="true"
            android:textSize="19sp"
            android:layout_marginTop="70dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dự kiến có hàng vào: 17/04/2021"
            android:id="@+id/tv4"
            android:layout_below="@id/tvamout"
            android:layout_centerHorizontal="true"
            android:textSize="19sp"
            android:layout_marginTop="10dp" />


        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv4"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="71dp"
            android:background="@drawable/purple_stroke"
            android:fontFamily="sans-serif"
            android:text="Trở lại"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:layout_below="@id/tv4"
            android:background="@drawable/purple_stroke"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="220dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Tiếp theo"
            android:fontFamily="sans-serif"
            android:textColor="#ffffff"
            android:textSize="20sp"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>